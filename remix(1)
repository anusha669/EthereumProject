pragma solidity ^0.4.*;

contract MobileDealership
{
    struct Mobile{
        address userId;
        string ownerName;
        string seller;
        uint price;
        int password;
        string purchaseDate;
        string warranty;
        uint altNumber;
    }
    mapping(address => Mobile) public m;
    
    modifier isVerifiedOwner(address uid,int pwd)
    {
        require(m[uid].password == pwd);
        _;
    }
    
    
    function createOwnership(string ownerName,string s,uint price,int pwd,string purchaseDate,string warranty,
    uint altNumber) public
    {
        m[msg.sender] = Mobile(msg.sender,ownerName,s,price,pwd,purchaseDate,warranty,altNumber);
    }
    
    
    function displayDetails(int pwd) isVerifiedOwner(msg.sender,pwd) public returns(address,string,string,uint,string,string,uint)
    {
        return (m[msg.sender].userId,m[msg.sender].ownerName,m[msg.sender].seller,m[msg.sender].price,
        m[msg.sender].purchaseDate,m[msg.sender].warranty,m[msg.sender].altNumber);
    }


    function update(int pwd,uint num) isVerifiedOwner(msg.sender,pwd) public
    {
        m[msg.sender].altNumber = num; 
    }
    
    
}
